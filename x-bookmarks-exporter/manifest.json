{
  "manifest_version": 3,
  "name": "X Bookmarks Exporter",
  "version": "1.0",
  "description": "Export your X (Twitter) bookmarks to JSON or CSV",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/i/bookmarks*", "https://twitter.com/i/bookmarks*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
